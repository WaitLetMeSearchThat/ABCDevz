{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    // This setting tells the editor that any import starting with "@/" 
    // should look in the "./src" directory.
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  // Include all source files for the compiler/language server
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue"
  ],
  // Exclude node_modules and typical build output directories
  "exclude": [
    "node_modules",
    "dist"
  ]
}